                $.ajax({
                    url: '/Home/test',
                    contentType: 'application/json',
                    type: "POST",
                    //contentType: 'application/json; charset=utf-8',
                    data: JSON.stringify(userData),


                    success: function (data) {
                        debugger;
                        alert("ok");
                    },
                    error: function (xhr) {
