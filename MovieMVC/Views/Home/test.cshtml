                    @Html.TextBoxFor(model => model.Surname, new { @class = "form-control", id = "userModelSurname" })

                </div>

                <div class="form-group">
                    <div class="col-md-offset-1 col-md-11">
                        <input id="submitId" value="Create" class="btn btn-default" onclick="test();" />
                    </div>
                </div>
            </div>


        </form>




        <script type="text/javascript">


           
            function test() {

                var userData = {

                    Name: document.getElementById("userModelName").value,//$("#userModelName").val(),
                    Surname: $('#userModelSurname').val()
                };

                alert(JSON.stringify(userData));

                debugger;
